// Program to calculate cost and time it takes to fill a swimming pool//inputs: // length width depth// cubic feet// gallons//outputs:// cost// gallons// cubic feet//constants:// cu feet/ gallons#include <iostream>using namespace std;//declarations//protoype functionsdouble poolsize(double cubicft)double galpercubicft(double gallons)double costtofill(double cost)//variablesdouble length;double width;double depth;double gallons;double cost;double cubicfeet;double fillrate;const GallonsPerFoot = 7.48051948;int main(){cout << "Please enter pool length(in feet):  \n";cin >> length;cout << "\nPlease enter pool width(in feet):  \n";cin >> width;cout << "\nPlease enter pool depth(in feet):  \n";cin >> depth;cout << "\nPlease enter fill rate (in gallons per minute): \n";cin >> fillrate;poolsize(cubicft)galpercubicft(gallons)costtofill(cost)cout << "cubic feet:  " << cubic ft << "\n";cout << "total gallons:  " <<gallons << "\n";cout << "total cost:  " << cost << "\n";cout << "time to fill(in minutes):  " << gallons/fillrate; }double poolsize(double cubicft){ cubicfeet=length*width*height  return cubicfeet;}double galpercubicft(double gallons){ gallons=cubicft*GallonsPerFoot  return gallons;}double costtofill(double cost){double total gallons;double surplus; //divide gallons by 1000 total gallons=gallons/1000 if (total gallons <= 3){  cost =15.50  return cost; else if(total gallons >3){ cost =(total gallons -3)*2.90+15.50  return cost;}  
